{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": false,
    "skipLibCheck": true,
    "target": "esnext",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./packages/client/*"]
    },
    "types": [
      "@nuxt/vue-app",
      "@types/node",
      "@types/jest",
      "@types/webpack-env",
      "vuetify"
    ],
    "plugins": [
      { "transform": "ts-optchain/transform" },
    ],
  }
}

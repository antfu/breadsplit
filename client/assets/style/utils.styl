.vertical-aligned > *
  vertical-align middle
  display inline-block

.op-animated
  transition opacity .2s ease-in-out

.op-85
  opacity 0.85

.op-75
  opacity 0.75

.op-50
  opacity 0.5

.op-25
  opacity 0.25

.op-10
  opacity 0.1

.layout-relative
  position relative

.scroll-page
  height calc(100vh - 64px)
  height calc(var(--vh, 1vh) * 100 - 64px)
  overflow auto
  padding-bottom 60px

.scrolling
  overflow-y auto

.height-100
  height 100%

.height-max-100
  max-height 100%
  overflow-y hidden

// fix from https://stackoverflow.com/questions/43352501/css-grid-content-to-use-free-space-but-scroll-when-bigger
.grid-fill-height
  position relative

  & > *
    position absolute
    top 0
    left 0
    right 0
    max-height 100%

  &.v-window
    .v-window__container
      height 100%
    .v-window-item
      height 100%


.relax-list-item
  .v-list__tile
    height inherit
    min-height 56px

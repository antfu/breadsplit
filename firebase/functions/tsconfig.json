{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
    ],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "es2017",
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": [
    "src/index.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}

service cloud.firestore {
  match /databases/{database}/documents {
    match /groups/{groupId} {
      allow create: if request.auth.uid != null;
      allow get, list, update: if resource == null || request.auth.uid in resource.data.memberIds;
      allow delete: if resource.data.members[request.auth.uid].role == 'owner';
    }
  }
}
{
  // Basic
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    "**/dist": true,
    "**/logs": true,
    "**/package-lock.json": true,
    "**/lib": true,
    "CHANGELOG.md": true,
    ".*": true,
  },
  "editor.tabSize": 2,
  "editor.renderWhitespace": "boundary",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": false,

  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[xml]": {
    "editor.formatOnSave": true
  },

  // Eslint
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "vue",
      "autoFix": true
    },
    {
      "language": "html",
      "autoFix": true
    }
  ],

  // Spell check
  "cSpell.words": [
    "Vetur",
    "axois",
    "breadsplit",
    "categoryid",
    "cond",
    "dayjs",
    "devtool",
    "eval",
    "favicon",
    "fullname",
    "groupid",
    "iframe",
    "imageid",
    "instanceof",
    "localstorage",
    "memberid",
    "nanoid",
    "numpad",
    "nuxt",
    "nuxtjs",
    "persistedstate",
    "preprocessors",
    "promisify",
    "recents",
    "repo",
    "res",
    "rgba",
    "rusha",
    "scroller",
    "stringify",
    "styl",
    "tful",
    "typeof",
    "uids",
    "uniquity",
    "unreads",
    "unshift",
    "unsynced",
    "vuetify",
    "vuex"
  ],
  "cSpell.allowCompoundWords": true,
  "cSpell.enabledLanguageIds": [
    "javascript",
    "javascriptreact",
    "markdown",
    "plaintext",
    "text",
    "typescript",
    "typescriptreact",
    "yaml",
    "vue",
  ],

  // Markdown lint
  "markdownlint.config": {
    "MD014": false,
  },

  // i18n
  "i18n-ally.sourceLanguage": "en",
  "i18n-ally.displayLanguage": "en",
  "i18n-ally.keystyle": "nested",
  "i18n-ally.preferredDelimiter": "_",
  "i18n-ally.sortKeys": true,
  "i18n-ally.localesPaths": "packages/locales",
  "i18n-ally.promptTranslatingSource": true,

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}

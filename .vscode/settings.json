{
  // Basic
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    "**/dist": true,
    "**/logs": true
  },
  "editor.tabSize": 2,
  "editor.renderWhitespace": "boundary",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": false,

  "[json]": {
    "editor.formatOnSave": true
  },

  // Eslint
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "vue",
      "autoFix": true
    },
    {
      "language": "html",
      "autoFix": true
    }
  ],

  // Spell check
  "cSpell.words": [
    "Vetur",
    "axois",
    "breadsplit",
    "dayjs",
    "fullname",
    "groupid",
    "localstorage",
    "memberid",
    "nanoid",
    "nuxt",
    "nuxtjs",
    "persistedstate",
    "preprocessors",
    "promisify",
    "repo",
    "res",
    "rgba",
    "splitoast",
    "styl",
    "tful",
    "typeof",
    "uids",
    "uniquity",
    "unsynced",
    "vuetify",
    "vuex"
  ],
  "cSpell.allowCompoundWords": true,
  "cSpell.enabledLanguageIds": [
    "javascript",
    "javascriptreact",
    "markdown",
    "plaintext",
    "text",
    "typescript",
    "typescriptreact",
    "yml",
    "vue",
  ],

  // Markdown lint
  "markdownlint.config": {
    "MD014": false,
  },

  // i18n
  "vue-i18n-ally.i18nPaths": "./locales",
  "vue-i18n-ally.sourceLocale": "en",
  "vue-i18n-ally.displayLocale": "zh-TW",
}
